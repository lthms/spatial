(executable
 (package spatial-shell)
 (public_name spatial)
 (name main)
 (libraries poll spatial_ipc sway_ipc unix threads))

(rule
 (alias man-pages)
 (action
  (with-stdout-to
   spatial.1
   (with-stdin-from
    spatial.1.scd
    (run scdoc)))))

(rule
 (alias man-pages)
 (action
  (with-stdout-to
   spatial.5
   (with-stdin-from
    spatial.5.scd
    (run scdoc)))))
