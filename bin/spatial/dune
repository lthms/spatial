(executable
 (name main)
 (libraries poll spatial-shell.ipc sway-ipc unix threads))

(rule
 (alias man-pages)
 (action
  (with-stdout-to
   spatial.1
   (with-stdin-from
    spatial.1.scd
    (run scdoc)))))

